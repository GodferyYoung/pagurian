{{>fixtures/doctype}}
<head>
	<title>{{data.page.modal}}</title>
	{{>fixtures/head}}
</head>
<body>

{{>fixtures/header}}

<!-- BEGIN CONTAINER -->
<div class="page-container">
	
	{{>fixtures/sidebar}}

	<!-- BEGIN CONTENT -->
	<div class="page-content-wrapper">
		
		<div class="page-content">
			
			{{>fixtures/theme-panel}}
		
			<div class="row">
				<div class="col-md-12">
					<h3 class="page-title">
					{{data.page.modal}}
					</h3>
				</div>
			</div>

			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
					
					<!-- BEGIN PORTLET-->
					<div class="portlet box default">
						<div class="portlet-title">
							<div class="caption">
								基础
							</div>
						</div>
						<div class="portlet-body">
							<a class="btn default" id="btn_remove"><i class="fa fa-minus"></i> 删除</a>
							<a class="btn default" id="btn_add"><i class="fa fa-plus"></i> 添加</a>
						    
                        </div>
					</div>
					<!-- END PORTLET-->

				</div>
               
			</div>

			
            <div class="row">
                            <!--markdown-->
                            <div class="markdown">
                                <h3>Javascript</h3>
                                <pre><code class="javascript">//删除
$p.ui.modal("#btn_remove", {
    title: "提示",
    body: "你确定要删除吗？",
    submit: function(modal, data, params, callback) {
        $p.ui.alert("你点击了确定");
        modal.hide();
    }
});

//添加
$p.ui.modal("#btn_add", {
    title: "添加用户",
    body: $("#tpl_user").html(),
    validate: function(modal, data, params) {
        return true;
    },
    submit: function(modal, data, params, callback) {
        $p.ui.alert("你点击了确定");
        modal.hide();
    }
}); 
                                </code></pre>
                            </div>
                            <!--end markdown-->

            </div>

			<!-- END PAGE CONTENT-->
		</div>
	</div>
	<!-- END CONTENT -->
</div>
<!-- END CONTAINER -->

{{>fixtures/footer}}

<script type="text/tpl" id="tpl_user" >
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet-body">
                <form action="">
                    <div class="form-group">
                        <label class="control-label">用户名</label>
                        <input type="text" class="form-control" maxlength="50" name="name" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">年龄</label>
                        <input type="text" class="form-control" maxlength="3" name="age" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</script>

<script type="text/javascript">
	pagurian.call("modules/standard/app", function(app) {
		app.page.modals();
	});
</script>

</body>
</html>